  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.33",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "test": "jest",
    "prebuild": "rm -rf lib",
    "define": "dts-bundle-generator --config ./dts-config.json",
    "build": "npm run prebuild && tsc && npm run define"
  }
}
