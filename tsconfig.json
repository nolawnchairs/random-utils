{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2015",
      "lib": [
        "es2015",
        "esnext"
      ],
      "sourceMap": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "noUnusedLocals": false,
      "strictPropertyInitialization": false,
      "removeComments": true,
      "outDir": "lib"
    },
    "include": [
      "./src/**/*"
    ]
  }